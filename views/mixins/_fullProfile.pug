mixin fullProfile(userdata = {})
	.column.is-10.is-offset-1
		.columns.box(style="margin-bottom: 1rem")
			.column.is-one-third
				.card
					.card-image
						figure.image
							- var i = 0
							img#pp(src=`/users/${userdata.hash}/${userdata.photos[i]}` alt="photo")
					.card-footer
						.card-footer-item#prev(style="color: #3273dc") Previous
						.card-footer-item#next(style="color: #3273dc") Next
			footer.column.is-one-third
					h2.title.is-3 #{userdata.first_name}  |  5â˜…
					h2.subtitle #{userdata.age} Years Old, lives in #{userdata.location.loc}
					each tag in userdata.tags
						span.tag.is-warning(style="margin-right: 3px") #{tag}
			.column.is-one-third
				h2.title Bio
				p #{userdata.bio}
